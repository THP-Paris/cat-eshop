
<body>

        <!-- Product section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-5"><img class="card-img-top mb-5 mb-md-0" src="https://source.unsplash.com/250x250/?kitten?sig=<%=rand(1..50)%>" class="img-fluid"> </div>
                    <div class="col-md-5">
                        
                        <h1 class="display-5 fw-bolder"> <%= @item.title%></h1>
                        <div class="fs-5 mb-5">
                        
                            <span><%= @item.price%>â‚¬</span>
                        </div>
                        <p class="lead"><%= @item.description%></p>
                        <div class="d-flex">
                       
                            

                                <% if user_signed_in? %>
                                <%= form_for @join_table_item_cart do |f| %>
                                    
                                    <%= f.hidden_field :item_id, value: @item.id %>
